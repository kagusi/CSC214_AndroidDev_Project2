<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/feed_posterImageImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/empty_profile_image"
            android:layout_marginStart="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feed_poster_name_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#080808"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/feed_post_time_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/24/2017"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/feed_postTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shout out to y'all. Just wanna say Hi"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textColor="#262525"/>

    <ImageView
        android:id="@+id/feed_postedImage_ImageView"
        android:layout_width="340dp"
        android:layout_height="230dp"
        android:background="#8b8b7d"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:visibility="gone"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/feed_numberOfLikesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/feed_numberOfCommentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 Comments"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            android:layout_marginStart="255dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#8e8a8a"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feed_LikeIconImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:src="@mipmap/icon_like"/>

        <TextView
            android:id="@+id/feed_LikeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/feed_CommentIconImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/comment_black"
            android:layout_marginTop="3dp"
            android:layout_marginStart="220dp"/>

        <TextView
            android:id="@+id/feed_commentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#8e8a8a"
        android:layout_marginTop="5dp"/>

</LinearLayout>